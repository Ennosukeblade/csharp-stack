@{
    ViewData["Title"] = "Home Page";
}
@model Chef
<div class="row">
<div class="col-6">
    <h1 class="display-4">Add a chef</h1>
    <form asp-action="CreateChef" asp-controller="Home" method="post">
        <hr>
        <div class="form-group mb-3">
            <label asp-for="FirstName"></label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <input asp-for="FirstName" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="LastName"></label>
            <span asp-validation-for="LastName" class="text-danger"></span>
            <input asp-for="LastName" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="Birth"></label>
            <span asp-validation-for="Birth" class="text-danger"></span>
            <input asp-for="Birth" class="form-control">
        </div>

        <input type="submit" value="Create" class="btn btn-primary">
    </form>
</div>
</div>
