@model Quest
<div class="row">
    <div class="col-6">
        <h1>Post a Quest</h1>
        <form asp-action="CreateQuest" asp-controller="Home" method="post">
            <div class="form-group mb-3">
                <label asp-for="Title"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
                <input asp-for="Title" class="form-control">
            </div>
            <div class="form-group mb-3">
                <label asp-for="Reward"></label>
                <span asp-validation-for="Reward" class="text-danger"></span>
                <input asp-for="Reward" class="form-control">
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
                <input asp-for="Description" class="form-control">
            </div>
            <input type="submit" value="Post Quest" class="btn btn-primary">
        </form>
    </div>
</div>